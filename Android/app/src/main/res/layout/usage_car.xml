<?xml version="1.0" encoding="utf-8"?>
<TableRow>

    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="3dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/usage_car_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="99-384-06 (Honda Civic)"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/usage_mileage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/usage_mileage"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="@string/current_mileage"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/usage_mpg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usage_mileage_title"
        android:layout_toLeftOf="@+id/usage_mileage"
        android:layout_toStartOf="@+id/usage_mileage"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="Mile per Gallon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/usage_dpg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usage_mpg_title"
        android:layout_toLeftOf="@+id/usage_mpg"
        android:layout_toStartOf="@+id/usage_mpg"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:text="$ per Gallon"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/usage_mileage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/usage_car_title"
        android:layout_toRightOf="@+id/usage_mileage_title"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:text="New Text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/usage_dpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usage_mileage"
        android:layout_alignRight="@+id/usage_mileage"
        android:layout_alignTop="@+id/usage_dpg_title"
        android:layout_toRightOf="@+id/usage_dpg_title"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:text="New Text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/usage_mpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usage_mileage"
        android:layout_alignRight="@+id/usage_mileage"
        android:layout_below="@+id/usage_mileage"
        android:layout_toEndOf="@+id/usage_mileage_title"
        android:layout_toRightOf="@+id/usage_mileage_title"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingTop="3dp"
        android:text="New Text"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    </RelativeLayout>
</TableRow>